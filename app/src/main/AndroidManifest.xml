<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_study_sync"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_study_sync_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudySync"
        tools:targetApi="31">
        <activity
            android:name=".AddSubjectActivity"
            android:exported="false"
            android:label="Neues Fach hinzufügen"
            android:parentActivityName=".UpdateSemesterActivity" />
        <activity
            android:name=".UpdateSubjectActivity"
            android:exported="false"
            android:label="Noten"
            android:parentActivityName=".UpdateSubjectActivity" />
        <activity
            android:name=".UpdateSemesterActivity"
            android:exported="false"
            android:label="Fächer übersicht"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddSemesterActivity"
            android:exported="false"
            android:label="Neues Semester hinzufügen"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Semester übersicht">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>